@using Applicants.Data
@model Applicants.Models.ApplicantsViewModel

<div class="container">
    <h2>Refused</h2>
    <div class="row">
        <button class="btn btn-success toggle-notes">Show/Hide Notes</button>
        <table class="table table-bordered table-hover table-striped">
            <tr>
                <th></th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Notes</th>
            </tr>
            @foreach (Applicant a in Model.Applicants)
            {
                <tr>
                    <td><a href="/home/details?id=@a.Id">View Details</a></td>
                    <td>@a.FirstName @a.LastName</td>
                    <td>@a.Phone</td>
                    <td>@a.Email</td>
                    <td>@a.Notes</td>
                </tr>
            }
        </table>
    </div>
</div>

@section scripts
    {
    <script src="~/Scripts/toggle.js"></script>
}
